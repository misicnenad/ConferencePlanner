@page
@model FrontEnd.Pages.Admin.CreateConferenceModel
@{
    ViewData["Title"] = "CreateConference";
}

<p>
    Create new Conference
</p>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Conference.Name" class="control-label"></label>
        <div class="row">
            <div class="col-md-6">
                <input asp-for="Conference.Name" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Conference.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Conference.StartTime" class="control-label"></label>
        <div class="row">
            <div class="col-md-6">
                <input type="date" asp-for="Conference.StartTime" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Conference.StartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Conference.EndTime" class="control-label"></label>
        <div class="row">
            <div class="col-md-6">
                <input type="date" asp-for="Conference.EndTime" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Conference.EndTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

