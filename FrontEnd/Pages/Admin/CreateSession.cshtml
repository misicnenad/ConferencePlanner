@page
@model FrontEnd.Pages.Admin.CreateSessionModel
@{
    ViewData["Title"] = "CreateSession";
}

<p>
    Create new Session
</p>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Session.Title" class="control-label"></label>
        <div class="row">
            <div class="col-md-6">
                <input asp-for="Session.Title" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Session.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Session.Abstract" class="control-label"></label>
        <div class="row">
            <div class="col-md-6">
                <input asp-for="Session.Abstract" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Session.Abstract" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Session.StartTime" class="control-label"></label>
        <div class="row">
            <div class="col-md-6">
                <input type="datetime" asp-for="Session.StartTime" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Session.StartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Session.EndTime" class="control-label"></label>
        <div class="row">
            <div class="col-md-6">
                <input type="datetime" asp-for="Session.EndTime" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Session.EndTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Session.ConferenceId" class="control-label"></label>
        <div class="row">
            <div class="col-md-6">
                <select asp-for="Session.ConferenceId" asp-items="@Model.ConferenceItemList"></select>
            </div>
        </div>
        <span asp-validation-for="Session.ConferenceId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Session.TrackId" class="control-label"></label>
        <div class="row">
            <div class="col-md-6">
                <select asp-for="Session.TrackId" asp-items="@Model.TrackItemList"></select>
            </div>
        </div>
        <span asp-validation-for="Session.TrackId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

